<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchProductsBoxStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/multiplier_x2_4dp</item>
        <item name="android:layout_marginEnd">@dimen/multiplier_x2_4dp</item>
        <item name="android:background">@drawable/search_rounded_background</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">@dimen/multiplier_x2_4dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">none</item>
        <item name="android:longClickable">false</item>
        <item name="android:textSize">@dimen/multiplier_x2_6dp</item>
    </style>

    <style name="SearchProductsBoxStyleTwo" parent="AppTheme">
        <item name="colorPrimary">@color/white</item>
    </style>
</resources>
