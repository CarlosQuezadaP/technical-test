<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="@dimen/multiplier_x2_4dp"
    android:layout_marginBottom="@dimen/multiplier_x2_4dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/multiplier_x2_4dp"
        android:layout_marginTop="@dimen/multiplier_x2_4dp"
        android:scaleType="center"
        android:src="@drawable/baseline_saved_search_grey_400_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="contentDescription" />

    <TextView
        android:id="@+id/textView_suggestion"
        android:layout_width="@dimen/multiplier_x2_0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/multiplier_x2_4dp"
        android:layout_marginEnd="@dimen/multiplier_x2_4dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView_arrow"
        app:layout_constraintStart_toEndOf="@+id/imageView_search"
        tools:text="@string/suggestion_tool_text" />

    <ImageView
        android:id="@+id/imageView_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/multiplier_x2_4dp"
        android:layout_marginEnd="@dimen/multiplier_x2_4dp"
        android:scaleType="center"
        android:src="@drawable/baseline_north_west_grey_400_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="contentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>
